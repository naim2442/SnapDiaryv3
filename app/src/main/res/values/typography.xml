<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography styles for SnapDiary -->
    <style name="TextAppearance.SnapDiary.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextAppearance.SnapDiary.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextAppearance.SnapDiary.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TextAppearance.SnapDiary.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textFontWeight">400</item>
    </style>
</resources>
