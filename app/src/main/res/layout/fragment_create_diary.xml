<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <View
        android:id="@+id/spacerView"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:visibility="invisible" />


    <!-- Centered LinearLayout for Audio buttons -->


    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="388dp"
        android:layout_height="102dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="112dp"
        android:gravity="start"
        android:hint="Enter description"
        android:inputType="textMultiLine"
        android:padding="16dp" />

    <RatingBar
        android:id="@+id/ratingBarMood"
        style="@style/CustomRatingBar"
        android:layout_width="381dp"
        android:layout_height="63dp"
        android:layout_below="@id/editTextDescription"
        android:layout_marginTop="23dp"
        android:numStars="5"
        android:padding="16dp"
        android:rating="0"
        android:stepSize="1" />

    <LinearLayout
        android:id="@+id/linearLayoutButtons"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingBarMood"
        android:layout_marginTop="11dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/buttonCamera"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Take Picture"
            style="@style/LightBlueButtonStyle"/>

        <Button
            android:id="@+id/buttonSelectImage"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:baselineAligned="false"
            android:padding="16dp"
            android:text="Select Image"
            style="@style/LightBlueButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutButtons"
        android:layout_centerVertical="true"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/buttonRecordAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Record Audio"
            style="@style/LightBlueButtonStyle"/>

        <Button
            android:id="@+id/buttonStopAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Stop Recording"
            android:visibility="gone"
            style="@style/LightBlueButtonStyle"/>

        <Button
            android:id="@+id/buttonPlaybackAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Playback Audio"
            android:visibility="gone"
            style="@style/LightBlueButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutSave"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutButtons"
        android:layout_centerVertical="true"
        android:layout_marginTop="98dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LinearLayoutAudio"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:text="Save Diary"
            style="@style/LightBlueButtonStyle"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutReset"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutButtons"
        android:layout_centerVertical="true"
        android:layout_marginTop="180dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            android:id="@+id/buttonReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonSave"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="resetInputs"
            android:text="Reset"
            style="@style/LightBlueButtonStyle"/>


    </LinearLayout>


</RelativeLayout>
